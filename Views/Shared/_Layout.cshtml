<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Formulario de pago</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/firstapp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Formulario de pago</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - firstapp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const fechaIngresadaform = document.getElementById("fechavenc").value
        const $Numerotarjeta = document.getElementById("Numerotarjeta").value
        const $ejemplomontopago = document.getElementById("ejemplomontopago")
        const $button = document.getElementById("botoncal")
        $button.addEventListener(
            "click",
            () => {
                fechaActual = new Date()
               var fechaIngresada = new Date(fechaIngresadaform);
                if (fechaIngresada.getTime() < fechaActual.getTime()) {
                alert("La fecha ingresada es anterior a la fecha actual.");
                } else if (fechaIngresada.getTime() > fechaActual.getTime()) {
                alert("La fecha ingresada es posterior a la fecha actual.");
                } else {
                alert("La fecha ingresada es la fecha actual.");
                }
            }
        )
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
